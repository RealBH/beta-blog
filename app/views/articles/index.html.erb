<h1>Historical Animal Records</h1>
<p>
  <%= link_to "Create New Record", new_article_path %>
</p>
<table>
  <!--tr: Table Row Tag-->
  <tr>
    <!--th: Table Header Tag-->
    <th>Title</th>
    <th>Description</th>
  </tr>
  
  <!--Iterate through each element of @articles (loop), and display title and description-->
  <%  @articles.each do |article| %>
    <tr>
      <!--td: Table Data tag-->
      <td>
        <!--Referencing title and description using temporary 'article' variable-->
        <%= article.title %>
      </td>
      <td><%= article.description %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>